@model IEnumerable<Product>

<div class="text-center">
    <div class="display-6">Products</div>

    <div class="d-flex justify-content-end my-3">
        <a class="btn btn-outline-success" asp-action="Create"><i class="fa fa-plus"> </i> Create</a>
    </div>

    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th>Image Url</th>
                <th scope="col">Product Name</th>
                <th scope="col">Price</th>
                <th scope="col">Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Product prd in Model)
            {
                <tr>
                    <th scope="row">@prd.ProductId</th>
                    <td><img class="shadow border border-light rounded" width="50" src="@prd?.ImageUrl" alt="@prd?.ProductName"/></td>
                    <td>@prd.ProductName</td>
                    <td>@prd.Price.ToString("c")</td>
                    <td>
                        <div>
                            <a class="btn btn-warning" asp-action="Update" asp-route-id="@prd.ProductId"><i class="fa fa-edit"></i> Edit</a>
                            <a class="btn btn-primary" asp-action="Get" asp-area="=" target="_blank" asp-controller="Product" asp-route-id="@prd.ProductId"><i class="fa fa-search"></i> Web</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-controller="Product" asp-route-id="@prd.ProductId"><i class="fa fa-trash"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>