@model ProductDtoForUpdate

<div class="text-center">
    <div class="display-6">Update</div>
</div>

<form method="post" asp-action="Update">
    <div class="text-danger" asp-validation-summary="All"></div>
    <input type="hidden" asp-for="ProductId" />
    <div class="form-group my-3">
        <label asp-for="CategoryId"></label>
        <select class="form-control" asp-for="CategoryId" asp-items="@ViewBag.Categories">
        </select>
    </div>
    <div class="form-group my-3">
        <label asp-for="ProductName">Product Name:</label>
        <input asp-for="ProductName" class="form-control" placeholder="Product Name" />
    </div>
    <div class="form-group my-3">
        <label asp-for="Price">Price: </label>
        <input asp-for="Price" class="form-control" placeholder="Price" />
    </div>

    <div class="form-group my-3">
        <div>
            <button class="btn btn-primary" type="submit"><i class="fa fa-save"></i> Update</button>
            <a class="btn btn-outline-danger" asp-action="Index"><i class="fa fa-list"></i> Products</a>
        </div>
    </div>

</form>