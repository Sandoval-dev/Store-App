@model Product

<div class="text-center">
    <div class="display-6">Create</div>
</div>

<form method="post" asp-action="Create">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group my-3">
        <label asp-for="ProductName">Product Name:</label>
        <input asp-for="ProductName" class="form-control" placeholder="Product Name" />
    </div>
    <div class="form-group my-3">
        <label asp-for="Price">Price: </label>
        <input asp-for="Price" class="form-control" placeholder="Price" />
    </div>

    <div class="form-group my-3">
        <div>
            <button class="btn btn-primary" type="submit"><i class="fa fa-save"></i> Save</button>
            <a class="btn btn-outline-danger" asp-action="Index"><i class="fa fa-list"></i> Products</a>
        </div>
    </div>

</form>